<%= form_tag({ action: 'password' }, :class => "tabular", :id => "change_password_form") do %>
  <div class="modal-body">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">                
          <label for="password"><%=l(:field_password)%> <span class="required">*</span></label>
          <%= password_field_tag 'password', nil, :class => "form-control",:size => 25 %>
        </div>  
        <div class="form-group">        
          <label for="new_password"><%=l(:field_new_password)%> <span class="required">*</span></label>
          <%= password_field_tag 'new_password', nil, :class => "form-control",:size => 25 %>
          <p class="info"><%= l(:text_caracters_minimum, :count => Setting.password_min_length) %></p>
        </div>  
        <div class="form-group">        
          <label for="new_password_confirmation"><%=l(:field_password_confirmation)%> <span class="required">*</span></label>
          <%= password_field_tag 'new_password_confirmation', nil, :class => "form-control", :size => 25 %>
        </div>  
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= link_to l(:button_close), '#', class: 'btn', data: { dismiss: 'modal' } %>
    <%= submit_tag l(:button_apply), disable_with: l(:button_submiting), class: 'button blue btn-sm' %>
  </div>
<% end %>
