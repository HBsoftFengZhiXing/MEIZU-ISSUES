<% unless popover %>
  <li class="<%= 'unread' if push_notification.unread? %> row" id="<%= dom_id push_notification %>">
    <div class="col-md-3">
      <div class="user-image pull-left">
        <%= link_to_user(push_notification.author, :avatar => :small) %>        
      </div>
      <%= link_to_user push_notification.author %><br>
      <span class="time"><%= localize(push_notification.created_at, format: :short) %></span>
    </div>
    <div class="col-md-6">
      在<%= link_to push_notification.pusher.journalized.subject, read_push_notification_path(push_notification, pusher_path: issue_path(push_notification.pusher.journalized)) %>提到了你
      <span class="project">(<%= link_to_project push_notification.project %>)</span>
    </div>
    <div class="col-md-3">
      <% if push_notification.unread? %>
        <%= link_to l(:button_mark_as_read), mark_as_read_push_notification_path(push_notification), method: :post, remote: true, class: 'btn btn-mini' %>
      <% end -%>
    </div>
  </li>
<% else %>
  <li class="item">
    <%= link_to read_push_notification_path(push_notification, pusher_path: issue_path(push_notification.pusher.journalized)) do %>
      <div class="row">
        <div class="col-md-3">
          <div class="user-image pull-left">
            <%= image_tag push_notification.author.avatar_url(:small), :class => "img-rounded" %>     
          </div>
          <%= push_notification.author.name %><br>
          <span class="time"><%= localize(push_notification.created_at, format: :short) %></span>
        </div>
        <div class="col-md-9">
          在<%= push_notification.pusher.journalized.subject %>提到了你
          <span class="project">(<%= push_notification.project.name %>)</span>
        </div>
      </div>
    <% end -%>
  </li>
<% end -%>