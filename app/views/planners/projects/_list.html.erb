<% @projects.each do |p| %>      
  <li class="span2 project-item">
    <div>
      <%= link_to image_tag(p.icon_url(:large)), "/planners/projects/#{p.id}", :class => "project-picture thumbnail", :title => "#{p.name}" %>
      <div class="caption">
        <h5><%= truncate(strip_tags(p.name),:length => 15) %></h5>
        <p class="small" title="<%= p.description %>"><%= truncate(strip_tags(p.description),
:length => 10) %></p>
      </div>
    </div>
  </li>
<% end %>    
<% page = (params[:page] ? params[:page].to_i+1 : 2) %>
<% if @projects.num_pages > 1 && @projects.num_pages >= page %>
  <div class="load-more">
    <%= link_to t('label_load_more'), { page: page }, class: 'btn btn-load-more', remote: true %>
  </div>
<% end -%>
