<div class="modal" id="container-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_tag(member_invitations_path, method: :post, remote: true) do %>
        <div class="modal-body">
          <%= render :partial => 'form' %>
        </div>
        <div class="modal-footer">
          <%= link_to l(:button_close), '#', class: 'btn', data: { dismiss: 'modal' } %>
          <%= submit_tag l(:button_send), disable_with: l(:button_submiting), class: 'button blue btn-sm' %>
        </div>
      <% end %>
    </div>
  </div>    
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('#container-modal').on('show.bs.modal', function () {
      if(!isScroll().scrollY){
        // no-scroll
        $('body').addClass("modal-open-noscroll");
      }else { 
        $('body').removeClass("modal-open-noscroll");
      }
    })
  })
</script>